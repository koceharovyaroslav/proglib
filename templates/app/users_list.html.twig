{% extends 'base.html.twig' %}

{% block content %}
    <main role="main" class="container">
        <ul class="list-group">
        {% for user in users %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ user.username }}
                {% if user in app.user.users %}
                    <a class="btn btn-danger" href="{{ path('delete_user', {'id': user.id}) }}" role="button">Delete</a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('add_user', {'id': user.id}) }}" role="button">Add</a>
                {% endif %}
            </li>
        {% endfor %}
        </ul>
    </main>
{% endblock %}