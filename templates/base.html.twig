<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('app/css/main.css') }}">
    {% endblock %}
    <title>{% block title %}Find user site{% endblock %}</title>
</head>
<body>
{% block body %}
    {% block navbar %}
        <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <a class="navbar-brand" href="{{ path('index') }}">Home</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarsExampleDefault">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('fos_user_profile_show') }}">Profile<span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('users_list') }}">Users</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('post_new') }}">Add post</a>
                    </li>
                </ul>
                <ul class=" navbar-nav my-2 my-lg-0">
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary" href="{{ path('fos_user_security_logout') }}">Logout</a>
                    </li>
                </ul>
            </div>
        </nav>
    {% endblock %}
    {% block content %}
        <main role="main" class="container">

            <div class="starter-template">
                <h1>Bootstrap starter template</h1>
                <p class="lead">Use this document as a way to quickly start any new project.<br> All you get is this text and a mostly barebones HTML document.</p>
            </div>

        </main>
    {% endblock %}
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('node_modules/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('node_modules/popper.js/dist/popper.min.js') }}"></script>
    <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
{% endblock %}
</body>
</html>